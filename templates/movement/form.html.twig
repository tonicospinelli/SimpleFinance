<form class="ui form segment" method="post">
    {% if errors is not empty %}
        <div class="ui message">
            <div class="header">Action Forbidden</div>
            {% for error in errors %}
                <p>{{ error }}</p>
            {% endfor %}
        </div>
    {% endif %}
    <input type="hidden" name="movement[id]" value="{{ entity.id }}"/>

    <div class="field">
        <label>Date</label>
        <input placeholder="Date" type="date" name="movement[date]" pattern="dd/mm/yyyy">
    </div>
    <div class="field">
        <label>Amount</label>
        <input placeholder="Amount" type="number" step="0.00" name="movement[amount]">
    </div>
    <div class="field">
        <label>Name</label>
        <input placeholder="Name" type="text" name="movement[name]">
    </div>
    <div class="field">
        <label>Description</label>
        <textarea name="movement[description]" placeholder="Some description"></textarea>
    </div>
    <button type="submit" class="ui blue submit button">Save</button>
</form>